<UserControl x:Class="RequestMaster.Tabs.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RequestMaster.Tabs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:OrdersApp="clr-namespace:RequestMaster"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.DataContext>
        <OrdersApp:Config/>
    </UserControl.DataContext>
    
    <Grid Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="White" CornerRadius="20" Grid.Column="0" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="textBoxLogin"    Margin="20" Grid.Row="0" HorizontalAlignment="Center"/>
                <TextBlock x:Name="textBoxPassword" Margin="20" Grid.Row="1" HorizontalAlignment="Center"/>
                <TextBlock x:Name="textBoxEmail"    Margin="20" Grid.Row="2" HorizontalAlignment="Center"/>
                <Grid Grid.Row="4" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10" Content="обновить страницу"    Click="refreshButton_Click"/>
                </Grid>
            </Grid>
        </Border>
        <Border Background="White" CornerRadius="20" Grid.Column="1" Margin="20">
            <Grid>
                <DataGrid x:Name="createdRequestsDataGrid" Margin="20"/>
                <materialDesign:Snackbar x:Name="snackBar1" Margin="20" FontSize="20" IsActive="False" MessageQueue="{materialDesign:MessageQueue}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
