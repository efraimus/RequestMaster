<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersApp"
        xmlns:Collections="clr-namespace:System.Collections;assembly=System.Runtime" x:Class="OrdersApp.MainWindow"
        mc:Ignorable="d"
        xmlns:tabs="clr-namespace:OrdersApp.Tabs"
        xmlns:vm="clr-namespace:OrdersApp.ViewModels"
        WindowState="Maximized"
        Height="800"
        Width="1200"
        Closed="OnWindowClosed"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
        Title="PeopleFind"
        Background="#FFECECEC" Icon="/Windows/icon.ico">

    <Grid>
        <TabControl>
            <TabItem Height="60">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="Find work" FontSize="20"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <tabs:FindWork      DataContext="{Binding findWorkViewModel}" />
            </TabItem>
            <TabItem Height="60">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="Find employee" FontSize="20"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <tabs:FindEmployee  DataContext="{Binding findEmployeeViewModel}" />
            </TabItem>
            <TabItem Height="60">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="Profile" FontSize="20"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <tabs:Profile       DataContext="{Binding profileViewModel}" />
            </TabItem>
            <TabItem Height="60">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="Settings" FontSize="20"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <tabs:Settings      DataContext="{Binding settingsViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
