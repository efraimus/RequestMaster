<UserControl x:Class="OrdersApp.Tabs.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrdersApp.Tabs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:OrdersApp="clr-namespace:OrdersApp"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.DataContext>
        <OrdersApp:Config/>
    </UserControl.DataContext>
    
    <Grid Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" CornerRadius="20" Grid.Column="0" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="textBoxLogin"    Margin="20" Grid.Row="0" HorizontalAlignment="Center"/>
                <TextBlock x:Name="textBoxBalance"  Margin="20" Grid.Row="1" HorizontalAlignment="Center"/>
                <TextBlock x:Name="textBoxPassword" Margin="20" Grid.Row="2" HorizontalAlignment="Center"/>
                <TextBlock x:Name="textBoxEmail"    Margin="20" Grid.Row="3" HorizontalAlignment="Center"/>

                <Button Grid.Row="4" Margin="50" Content="Refresh page"      Click="refreshButton_Click"/>
                <Button Grid.Row="5" Margin="50" Content="Mark as completed" Click="markAsCompletedButton_Click"/>
            </Grid>
        </Border>
        <Border Background="#FFE5E5E5" CornerRadius="20" Grid.Column="1" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Background="White" CornerRadius="20" Grid.Row="0" Margin="0 0 0 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.18*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="I am employer"             Grid.Row="0" Margin="20 10 20 10" />
                        <DataGrid x:Name="ordersEmployerDataGrid"   Grid.Row="1" Margin="20" SelectionChanged="ordersEmployerDataGrid_SelectionChanged"/>
                        <materialDesign:Snackbar x:Name="snackBar1" Grid.Row="1" Margin="20" FontSize="20" IsActive="False" MessageQueue="{materialDesign:MessageQueue}"/>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="20" Grid.Row="1" Margin="0 0 0 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.18*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="I am employee"            Margin="20 10 10 10" Grid.Row="0"/>

                        <DataGrid x:Name="ordersEmployeeDataGrid"  Margin="20" Grid.Row="1" SelectionChanged="ordersEmployeeDataGrid_SelectionChanged"/>

                        <materialDesign:Snackbar x:Name="snackBar2" FontSize="20" Margin="20" Grid.Row="1" IsActive="False" MessageQueue="{materialDesign:MessageQueue}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
