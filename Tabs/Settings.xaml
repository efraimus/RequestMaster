<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RequestMaster.Tabs"
             xmlns:local2="clr-namespace:RequestMaster"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             x:Class="RequestMaster.Tabs.Settings"
             mc:Ignorable="d" 
             Background="{x:Static local2:App.backgroundColor}"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="{x:Static local2:App.foregroundColor}" CornerRadius="20" Grid.Column="1" Margin="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <ComboBox                x:Name="comboBoxWhatToChange"   Grid.Column="1" Grid.Row="2" Margin="20" materialDesign:HintAssist.Hint="выберите что поменять" Height="50" VerticalAlignment="Top" Foreground="{x:Static local2:App.textColor}" BorderBrush="{x:Static local2:App.textColor}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ComboBoxItem}">
                                <Setter Property="BorderBrush" Value="{x:Static local2:App.foregroundColor}" />
                                <Setter Property="Foreground"  Value="{x:Static local2:App.textColor}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                            <Grid>
                                                <Border x:Name="gd" 
                                                        Background="{x:Static local2:App.foregroundColor}" 
                                                        BorderThickness="0" >
                                                    <Grid>
                                                        <ContentPresenter  Name="ContentSite" Margin="25, 3, 0, 11" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="ComboBoxItem.IsMouseOver" Value="True">
                                                    <Setter TargetName="gd" Property="Background" Value="{x:Static local2:App.backgroundColor}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <materialDesign:Snackbar x:Name="snackBarXAML"           Grid.Column="1" Grid.Row="5" Margin="20" IsActive="False" MessageQueue="{materialDesign:MessageQueue}" Height="70"/>
                    <TextBox                 x:Name="textBoxForNewValue"     Grid.Column="1" Grid.Row="2" Margin="20" materialDesign:HintAssist.Hint="новое значение" VerticalAlignment="Center" Visibility="Hidden"/>
                    <PasswordBox             x:Name="passwordBoxForNewValue" Grid.Column="1" Grid.Row="2" Margin="20" materialDesign:HintAssist.Hint="новый пароль"   VerticalAlignment="Center" Visibility="Hidden"/>

                    <Button                  x:Name="changeButton"           Grid.Column="1" Grid.Row="4" Margin="20" Height="50" Click="changeButton_Click"  Content="поменять" />
                    <Button                  x:Name="confirmButton"          Grid.Column="1" Grid.Row="3" Margin="20" Height="50" Click="confirmButton_Click" Content="подтвердить" Visibility="Hidden"/>
                    <Button                  x:Name="returnButton"           Grid.Column="1" Grid.Row="4" Margin="20" Height="50" Click="returnButton_Click"  Content="назад"       Visibility="Hidden"/>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
