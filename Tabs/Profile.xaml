<UserControl x:Class="RequestMaster.Tabs.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RequestMaster.Tabs"
             xmlns:local2="clr-namespace:RequestMaster"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:OrdersApp="clr-namespace:RequestMaster"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid x:Name="profileGrid" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Background="{x:Static local2:App.foregroundColor}" CornerRadius="20" Grid.Column="0" Margin="20">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="логин" HorizontalAlignment="Center" FontWeight="Bold"         Foreground="{x:Static local2:App.textColor}"/>
                            <TextBlock x:Name="textBlockLogin"    Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="пароль" HorizontalAlignment="Center" FontWeight="Bold"        Foreground="{x:Static local2:App.textColor}"/>
                            <TextBlock x:Name="textBlockPassword" Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="2" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="почта" HorizontalAlignment="Center" FontWeight="Bold"         Foreground="{x:Static local2:App.textColor}"/>
                            <TextBlock x:Name="textBlockEmail"    Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                        </StackPanel>
                    </Border>
                    <Grid Grid.Row="4" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Content="обновить страницу"    Click="refreshButton_Click"/>
                    </Grid>
                </Grid>
            </Border>
            <Border Background="{x:Static local2:App.foregroundColor}" CornerRadius="20" Grid.Column="1" Margin="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Margin="40" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                        <TextBlock Text="заявки, созданные вами" Margin="20" Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                    </Border>

                <DataGrid x:Name="createdRequestsDataGrid"  
                          Margin="20"      
                          Grid.Row="1"/>
                    <materialDesign:Snackbar x:Name="snackBar1" Margin="20"      Grid.Row="1" FontSize="20" IsActive="False" MessageQueue="{materialDesign:MessageQueue}"/>
                </Grid>
            </Border>

        </Grid>

</UserControl>
