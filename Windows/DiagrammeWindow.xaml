<Window x:Class="RequestMaster.Windows.DiagrammeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:RequestMaster"
        xmlns:toolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=DotNetProjects.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Background="{x:Static local:App.backgroundColor}"
        Title="диаграмма" Height="800" Width="1200" Icon="/Windows/icon.ico">
    <Grid Margin="20">
        <Border x:Name="chartBorder" Background="{x:Static local:App.foregroundColor}" Grid.ColumnSpan="2" Margin="10 0 0 0"  CornerRadius="20">
            <Grid>
                <toolkit:Chart x:Name="chart" Title="заявки по статусам" Background="White" BorderThickness="0" Margin="20">
                    <toolkit:ColumnSeries DependentValuePath="Count" IndependentValuePath="Status" ItemsSource="{Binding}"/>

                    <toolkit:Chart.Axes>
                        <toolkit:LinearAxis Orientation="Y" Interval="1" ShowGridLines="True"/>
                    </toolkit:Chart.Axes>
                    <toolkit:Chart.LegendStyle>
                        <Style TargetType="Control">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Control"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </toolkit:Chart.LegendStyle>
                    <toolkit:Chart.PlotAreaStyle>
                        <Style TargetType="Grid">
                            <Setter Property="Background" Value="White" />
                        </Style>
                    </toolkit:Chart.PlotAreaStyle>


                </toolkit:Chart>
                

            </Grid>
        </Border>
    </Grid>
</Window>
