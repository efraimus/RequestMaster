<UserControl x:Class="RequestMaster.Tabs.Requests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RequestMaster.ViewModels"
             xmlns:local2="clr-namespace:RequestMaster"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:RequestsViewModel}"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid>
        <Grid x:Name="requestsGrid" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Border Background="{x:Static local2:App.foregroundColor}" CornerRadius="20" Margin="0 0 10 0" >
                <Grid>
                    <TreeView Margin="20" Foreground="{x:Static local2:App.textColor}">
                        <TreeView.Template>
                            <ControlTemplate>
                                <ScrollViewer>
                                    <ItemsPresenter></ItemsPresenter>
                                </ScrollViewer>
                            </ControlTemplate>
                        </TreeView.Template>

                        <TreeViewItem    Header="статус" IsExpanded="True">
                            <RadioButton x:Name="radioButtonStatus_Active"       Content="активна"    Foreground="#FF28A235" >

                            </RadioButton>
                            <RadioButton x:Name="radioButtonStatus_Processing"   Content="в обработке" Foreground="#0000FF"   />
                            <RadioButton x:Name="radioButtonStatus_Closed"       Content="закрыта"     Foreground="#FFD41212" />
                            <RadioButton x:Name="radioButtonStatus_NotImportant" Content="неважно"     IsChecked="True"         />
                        </TreeViewItem>

                        <TreeViewItem Header="автор" IsExpanded="False">
                            <RadioButton x:Name="radioButtonAuthor_Me"    Content="я" />
                            <RadioButton x:Name="radioButtonAuthor_NotMe" Content="не я" />
                            <RadioButton x:Name="radioButtonAuthor_NotImportant" Content="неважно" IsChecked="True"/>
                        </TreeViewItem>

                    </TreeView>
                    <Grid Margin="20" VerticalAlignment="Bottom">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Margin="10" Content="отсортировать"    Click="SortButton_Click"         HorizontalAlignment="Stretch"/>
                        <Button Margin="10" Content="очистить фильтры" Click="ClearFiltersButton_Click" HorizontalAlignment="Stretch" Grid.Row="1"/>
                    </Grid>
                </Grid>
            </Border>
            <Border Background="{x:Static local2:App.foregroundColor}" Grid.Column="1" Margin="10 0 0 0"  CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1" Margin="20" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="createRequestButton1" Margin="10" Content="создать заявку"         Click="createRequestButton_Click" HorizontalAlignment="Stretch"/>
                        <Button x:Name="helpButton"           Margin="10" Grid.Column="1" Content="помощь" Click="helpButton_Click"          HorizontalAlignment="Right"/>
                    </Grid>

                    <DataGrid x:Name="requestsDataGrid" 
                              Grid.Row="0" 
                              Margin="20"
                              MouseDoubleClick="requestsDataGrid_MouseDoubleClick"/>


                    <materialDesign:Snackbar x:Name="snackBar" FontSize="25" IsActive="False" MessageQueue="{materialDesign:MessageQueue}" Grid.Column="1" Grid.Row="0" FontFamily="{DynamicResource MaterialDesignFont}" Margin="20"/>
                </Grid>
            </Border>
        </Grid>

        <Border x:Name="createRequestBorder" Background="{x:Static local2:App.foregroundColor}" CornerRadius="20" Margin="20" Visibility="Hidden">
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="textBoxDescription"         Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="описание"                      Margin="20 50 20 50" VerticalAlignment="Center"/>
                    <TextBox x:Name="textBoxTelephoneNumber"     Grid.Column="1" Grid.Row="2" materialDesign:HintAssist.Hint="телефон, например 83335552222" Margin="20 50 20 50" VerticalAlignment="Center"/>

                    <Button x:Name="createRequestButton2"         Grid.Column="1" Grid.Row="3" Content="создать заявку" Click="createRequestButton2_Click"   Margin="20" VerticalAlignment="Center"/>
                    <Button x:Name="returnButton"                 Grid.Column="1" Grid.Row="4" Content="назад" Click="returnButton_Click"                    Margin="20" VerticalAlignment="Center"/>

                    <materialDesign:Snackbar x:Name="snackBar2"   Grid.Column="1" Grid.Row="7" FontFamily="{DynamicResource MaterialDesignFont}"  FontSize="25"  IsActive="False" MessageQueue="{materialDesign:MessageQueue}" Height="70" Margin="20"/>

                </Grid>
            </ScrollViewer>
        </Border>

        <Border x:Name="requestDetails" Background="{x:Static local2:App.foregroundColor}" CornerRadius="20" Margin="20" Visibility="Hidden">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Button    x:Name="returnButton2"      Grid.Column="0" Grid.Row="0" Margin="20" HorizontalAlignment="Left"  Content="назад"                Click="returnButton2_Click"/>
                    <Button    x:Name="сloseRequestButton" Grid.Column="0" Grid.Row="0" Margin="20" HorizontalAlignment="Right" Content="закрыть заявку"       Click="сloseRequestButton_Click"/>
                    <Button    x:Name="addCommentButton"   Grid.Column="0" Grid.Row="2" Margin="20" HorizontalAlignment="Right" Content="добавить комментарий" Click="addCommentButton_Click"/>
                    <Button    x:Name="returnButton3"      Grid.Column="0" Grid.Row="2" Margin="20" HorizontalAlignment="Right"      Content="назад"                Click="returnButton3_Click"  Visibility="Hidden"/>

                    <Grid Grid.Row="1">
                            
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                            
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Border BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" Grid.Column="0" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                            <StackPanel Margin="20">
                                <TextBlock Text="номер заявки" FontWeight="Bold"                               Foreground="{x:Static local2:App.textColor}"/>
                                <TextBlock x:Name="requestIdTextBlock" VerticalAlignment="Center"              Foreground="{x:Static local2:App.textColor}"/>
                            </StackPanel>

                        </Border>

                        <Border BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" Grid.Column="1" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                            <StackPanel Margin="20">
                                <TextBlock Text="описание" FontWeight="Bold"                                   Foreground="{x:Static local2:App.textColor}"/>
                                <TextBlock x:Name="requestDescriptionTextBlock" VerticalAlignment="Center"     Foreground="{x:Static local2:App.textColor}"/>
                            </StackPanel>
                        </Border>

                        <Border BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" Grid.Column="2" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                            <StackPanel Margin="20">
                                <TextBlock Text="номер телефона" FontWeight="Bold"                             Foreground="{x:Static local2:App.textColor}"/>
                                <TextBlock x:Name="requestTelephoneNumberTextBlock" VerticalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                            </StackPanel>
                        </Border>

                        <Border BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" Grid.Column="3" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                            <StackPanel Margin="20">
                                <TextBlock Text="статус" FontWeight="Bold"                                     Foreground="{x:Static local2:App.textColor}"/>
                                <TextBlock x:Name="requestStatusTextBlock" VerticalAlignment="Center"          Foreground="{x:Static local2:App.textColor}"/>
                            </StackPanel>

                        </Border>

                    </Grid>

                    <TextBlock Text="комментарии" Grid.Row="2" FontWeight="Bold" Margin="40 20 20 20" HorizontalAlignment="Left" Foreground="{x:Static local2:App.textColor}"/>
                    <materialDesign:Snackbar x:Name="snackBar3" Grid.Row="2" FontSize="25" IsActive="False" MessageQueue="{materialDesign:MessageQueue}" FontFamily="{DynamicResource MaterialDesignFont}" />
                    <DataGrid x:Name="commentsDataGrid" 
                              Grid.Row="3" 
                              Margin="20"/>

                    <Grid x:Name="newCommentGrid" Grid.Row="3" Visibility="Hidden">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="commentTextBox" 
                                 Grid.Column="1" 
                                 Grid.Row="0"
                                 HorizontalAlignment="Stretch"
                                 materialDesign:HintAssist.Hint="новый комментарий"
                                 Margin="20"
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Bottom"
                                 />
                        
                        <Button  x:Name="confirmAddingCommentButton"    
                                 Grid.Column="1" 
                                 Grid.Row="1" 
                                 Margin="100 20 100 20" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 Content="добавить" 
                                 Click="confirmAddingCommentButton_Click"/>
                        
                        <materialDesign:Snackbar x:Name="snackBar4" 
                                                 Grid.Row="2" 
                                                 Grid.Column="1" 
                                                 FontSize="25" 
                                                 IsActive="False" 
                                                 MessageQueue="{materialDesign:MessageQueue}" 
                                                 FontFamily="{DynamicResource MaterialDesignFont}" 
                                                 Margin="20"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>

    </Grid>
</UserControl>
