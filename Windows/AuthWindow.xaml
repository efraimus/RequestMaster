<Window x:Class="OrdersApp.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersApp"
        mc:Ignorable="d"
        WindowState="Maximized"
        Closed="onWindowClosed"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Authorization" Height="1000" Width="1100" Icon="/Windows/icon.ico">

    <Grid Background="#FFECECEC">
        <Border Background="White" Margin="20 20 5 20" CornerRadius="20">
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox     x:Name="emailBox"                   Grid.Row="0" Grid.Column="1" Margin="20" materialDesign:HintAssist.Hint="Email (optional)" Visibility="Hidden" />
                    <TextBox     x:Name="loginBox"                   Grid.Row="1" Grid.Column="1" Margin="20" materialDesign:HintAssist.Hint="Login"/>
                    <PasswordBox x:Name="passwordBox"                Grid.Row="2" Grid.Column="1" Margin="20" materialDesign:HintAssist.Hint="Password"/>
                    <PasswordBox x:Name="confirmPasswordBox"         Grid.Row="3" Grid.Column="1" Margin="20" materialDesign:HintAssist.Hint="Confirm password" Visibility="Hidden"/>

                    <Button      x:Name="dontHaveAnAccountYetButton" Grid.Row="4" Grid.Column="1" Margin="20 0 100 50" Content="I don't have an account yet" Click="dontHaveAnAccountYetButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                    <Button      x:Name="loginButton"                Grid.Row="3" Grid.Column="1" Margin="100" Content="Log in"                              Click="loginButton_Click"/>
                    <Button      x:Name="registrationButton"         Grid.Row="4" Grid.Column="1" Margin="100" Content="Sign up"                             Click="registrationButton_Click"         Visibility="Hidden"/>
                    <Button      x:Name="returnButton"               Grid.Row="4" Grid.Column="2" Margin="100" Content="Return"                              Click="returnButton_Click"               Visibility="Hidden"/>

                    <materialDesign:Snackbar x:Name="snackBar" FontSize="20" FontFamily="{DynamicResource MaterialDesignFont}" IsActive="False" MessageQueue="{materialDesign:MessageQueue}" Grid.Column="1" Grid.Row="4" Height="70" Margin="20"/>
                </Grid>
            </ScrollViewer>
        </Border>
        
    </Grid>
</Window>
