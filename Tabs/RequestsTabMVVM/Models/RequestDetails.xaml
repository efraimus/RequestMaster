<UserControl x:Class="RequestMaster.Tabs.RequestsTabMVVM.Models.RequestDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:RequestMaster"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <Border Background="{x:Static local:App.foregroundColor}" CornerRadius="20" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>



                <Grid Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="returnButton"       Grid.Column="0" Grid.Row="0" Margin="20" HorizontalAlignment="Stretch" Content="назад"                Click="returnButton_Click"/>
                    <Button x:Name="сloseRequestButton" Grid.Column="3" Grid.Row="0" Margin="20" HorizontalAlignment="Stretch" Content="закрыть заявку"       Click="сloseRequestButton_Click"/>
                    <Button x:Name="addCommentButton"   Grid.Column="2" Grid.Row="0" Margin="20" HorizontalAlignment="Stretch" Content="добавить комментарий" Click="addCommentButton_Click"/>
                    <Button x:Name="returnButton2"      Grid.Column="3" Grid.Row="2" Margin="20" HorizontalAlignment="Stretch" Content="назад"                Click="returnButton2_Click"    Visibility="Hidden"/>

                    <TextBlock Text="комментарии"       Grid.Column="0" Grid.Row="2" FontWeight="Bold" Margin="40 20 20 20" HorizontalAlignment="Left" Foreground="{x:Static local:App.textColor}"/>

                    <Border BorderBrush="{x:Static local:App.textColor}" BorderThickness="2" Grid.Column="0" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                        <StackPanel Margin="20">
                            <TextBlock Text="номер заявки" FontWeight="Bold"                  Foreground="{x:Static local:App.textColor}"/>
                            <TextBlock x:Name="requestIdTextBlock" VerticalAlignment="Center" Foreground="{x:Static local:App.textColor}"/>
                        </StackPanel>

                    </Border>

                    <Border BorderBrush="{x:Static local:App.textColor}" BorderThickness="2" Grid.Column="1" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                        <StackPanel Margin="20">
                            <TextBlock Text="описание" FontWeight="Bold"                                   Foreground="{x:Static local:App.textColor}"/>
                            <TextBlock x:Name="requestDescriptionTextBlock" VerticalAlignment="Center"     Foreground="{x:Static local:App.textColor}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{x:Static local:App.textColor}" BorderThickness="2" Grid.Column="2" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                        <StackPanel Margin="20">
                            <TextBlock Text="номер телефона" FontWeight="Bold"                             Foreground="{x:Static local:App.textColor}"/>
                            <TextBlock x:Name="requestTelephoneNumberTextBlock" VerticalAlignment="Center" Foreground="{x:Static local:App.textColor}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{x:Static local:App.textColor}" BorderThickness="2" Grid.Column="3" Grid.Row="1" Margin="20 5 20 5" CornerRadius="20">
                        <StackPanel Margin="20">
                            <TextBlock Text="статус" FontWeight="Bold"                                     Foreground="{x:Static local:App.textColor}"/>
                            <TextBlock x:Name="requestStatusTextBlock" VerticalAlignment="Center"          Foreground="{x:Static local:App.textColor}"/>
                        </StackPanel>

                    </Border>

                </Grid>

                <materialDesign:Snackbar x:Name="snackBar3" 
                                         Grid.Row="2" 
                                         FontSize="25" 
                                         IsActive="False" 
                                         MessageQueue="{materialDesign:MessageQueue}" 
                                         FontFamily="{DynamicResource MaterialDesignFont}" />
                
                <DataGrid x:Name="commentsDataGrid" 
                      Grid.Row="3" 
                      Margin="20"/>

                <Grid x:Name="newCommentGrid" Grid.Row="3" Visibility="Hidden">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="commentTextBox" 
                         Grid.Column="1" 
                         Grid.Row="0"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="новый комментарий"
                         Margin="20"
                         AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Bottom"
                         />

                    <Button  x:Name="confirmAddingCommentButton"    
                         Grid.Column="1" 
                         Grid.Row="1" 
                         Margin="100 20 100 20" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Center" 
                         Content="добавить" 
                         Click="confirmAddingCommentButton_Click"/>

                    <materialDesign:Snackbar x:Name="snackBar4" 
                                         Grid.Row="2" 
                                         Grid.Column="1" 
                                         FontSize="25" 
                                         IsActive="False" 
                                         MessageQueue="{materialDesign:MessageQueue}" 
                                         FontFamily="{DynamicResource MaterialDesignFont}" 
                                         Margin="20"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Border>
    
</UserControl>
