<UserControl x:Class="RequestMaster.Tabs.RequestsTabMVVM.Models.RequestsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:RequestMaster"
             Background="{x:Static local:App.backgroundColor}"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Border Background="{x:Static local:App.foregroundColor}" CornerRadius="20" Margin="0 0 10 0" >
            <Grid>
                <TreeView Margin="20" Foreground="{x:Static local:App.textColor}">
                    <TreeView.Template>
                        <ControlTemplate>
                            <ScrollViewer>
                                <ItemsPresenter></ItemsPresenter>
                            </ScrollViewer>
                        </ControlTemplate>
                    </TreeView.Template>

                    <TreeViewItem    Header="статус" IsExpanded="True">
                        <RadioButton x:Name="radioButtonStatus_Active"       Content="активна"     Foreground="#FF28A235" Checked="radioButtonStatus_Active_Checked"/>
                        <RadioButton x:Name="radioButtonStatus_Processing"   Content="в обработке" Foreground="#0000FF"   Checked="radioButtonStatus_Processing_Checked"/>
                        <RadioButton x:Name="radioButtonStatus_Closed"       Content="закрыта"     Foreground="#FFD41212" Checked="radioButtonStatus_Closed_Checked"/>
                        <RadioButton x:Name="radioButtonStatus_NotImportant" Content="неважно"     IsChecked="True"         Checked="radioButtonStatus_NotImportant_Checked"/>
                    </TreeViewItem>

                    <TreeViewItem Header="автор" IsExpanded="False">
                        <RadioButton x:Name="radioButtonAuthor_Me"    Content="я"              Checked="radioButtonAuthor_Me_Checked"/>
                        <RadioButton x:Name="radioButtonAuthor_NotMe" Content="не я"           Checked="radioButtonAuthor_NotMe_Checked"/>
                        <RadioButton x:Name="radioButtonAuthor_NotImportant" Content="неважно" Checked="radioButtonAuthor_NotImportant_Checked" IsChecked="True" />
                    </TreeViewItem>

                    <TreeViewItem Header="дата создания" IsExpanded="False">
                        <DockPanel>
                            <TextBlock Text="от" Margin="0 0 30 0" DockPanel.Dock="Left"/>
                            <TextBox x:Name="startDateBox"  Text="01.01.1970" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="до" Margin="0 0 30 0" DockPanel.Dock="Left"/>
                            <TextBox x:Name="endDateBox" DockPanel.Dock="Right"/>
                        </DockPanel>

                    </TreeViewItem>

                </TreeView>
                <Grid Margin="20" VerticalAlignment="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Margin="10"    Click="SortButton_Click"         HorizontalAlignment="Stretch" Width="300">
                        <materialDesign:PackIcon Kind="Filter" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                    <Button Margin="10" Click="ClearFiltersButton_Click" HorizontalAlignment="Stretch" Grid.Row="1" Width="300">
                        <materialDesign:PackIcon Kind="FilterRemove" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                </Grid>
            </Grid>
        </Border>
        <Border Background="{x:Static local:App.foregroundColor}" Grid.Column="1" Margin="10 0 0 0"  CornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="requestsDataGrid" Grid.Row="1" Margin="20 20 20 40" MouseDoubleClick="requestsDataGrid_MouseDoubleClick"/>

                <Grid Grid.Row="2" Margin="20" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" x:Name="createRequestButton" Width="100" Margin="10" Click="createRequestButton_Click">
                        <materialDesign:PackIcon Kind="Add" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                    <Button Grid.Column="4" x:Name="helpButton" Width="100" Margin="10" Click="helpButton_Click">
                        <materialDesign:PackIcon Kind="Help" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                    <Button Grid.Column="1" x:Name="createReportButton" Width="100" Margin="10" Click="createReport_Click">
                        <materialDesign:PackIcon Kind="FileChart" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                    <Button Grid.Column="2" x:Name="import" Width="100" Margin="10" Click="import_Click">
                        <materialDesign:PackIcon Kind="Import" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                    <Button Grid.Column="3" x:Name="export" Width="100" Margin="10" Click="export_Click">
                        <materialDesign:PackIcon Kind="Export" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="searchBox" Grid.Column="0" Foreground="{x:Static local:App.textColor}" Margin="10" HorizontalAlignment="Stretch">
                        <materialDesign:HintAssist.Hint>
                            <TextBlock Foreground="{x:Static local:App.textColor}" Text="поиск по описанию"/>
                        </materialDesign:HintAssist.Hint>
                    </TextBox>
                    <Button x:Name="search" Grid.Column="1" Click="search_Click"  Width="100"  Margin="10"  HorizontalAlignment="Right">
                        <materialDesign:PackIcon Kind="Search" RenderTransformOrigin="0.5, 0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                            </materialDesign:PackIcon.RenderTransform>
                        </materialDesign:PackIcon>
                    </Button>
                </Grid>
                
                <materialDesign:Snackbar x:Name="snackBarXAML" FontSize="25" IsActive="False" MessageQueue="{materialDesign:MessageQueue}" Grid.Column="1" Grid.Row="1" FontFamily="{DynamicResource MaterialDesignFont}" Margin="20"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
