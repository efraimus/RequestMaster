<UserControl x:Class="RequestMaster.Tabs.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RequestMaster.Tabs"
             xmlns:local2="clr-namespace:RequestMaster"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:OrdersApp="clr-namespace:RequestMaster"
             mc:Ignorable="d" 
             Background="{x:Static local2:App.backgroundColor}"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid x:Name="profileGrid" Margin="20">
        <Border Background="{x:Static local2:App.foregroundColor}" CornerRadius="20" Grid.Column="0">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.Row="0" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="логин" HorizontalAlignment="Center" FontWeight="Bold"         Foreground="{x:Static local2:App.textColor}"/>
                        <TextBlock x:Name="textBlockLogin"    Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="0" Grid.Row="1" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="пароль" HorizontalAlignment="Center" FontWeight="Bold"        Foreground="{x:Static local2:App.textColor}"/>
                        <TextBlock x:Name="textBlockPassword" Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="0" Grid.Row="2" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="почта" HorizontalAlignment="Center" FontWeight="Bold"         Foreground="{x:Static local2:App.textColor}"/>
                        <TextBlock x:Name="textBlockEmail"    Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="0" Grid.Row="3" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="заявок создано" HorizontalAlignment="Center" FontWeight="Bold"         Foreground="{x:Static local2:App.textColor}"/>
                        <TextBlock x:Name="textBlockHowManyRequestsCreated"    Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="0" Grid.Row="4" Margin="20" BorderBrush="{x:Static local2:App.textColor}" BorderThickness="2" CornerRadius="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="заявок закрыто" HorizontalAlignment="Center" FontWeight="Bold"         Foreground="{x:Static local2:App.textColor}"/>
                        <TextBlock x:Name="textBlockHowManyRequestsClosed"    Margin="20" HorizontalAlignment="Center" Foreground="{x:Static local2:App.textColor}"/>
                    </StackPanel>
                </Border>
                <Button Grid.Row="5" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Stretch" Content="выйти из аккаунта" Click="logOutButton_Click"/>

            </Grid>
        </Border>
    </Grid>

</UserControl>
